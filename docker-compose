version: '2'

services:
   db:
     image: mysql:5.7
     volumes:
       - db_data:/var/lib/mysql
     restart: always
     environment:
       MYSQL_ROOT_PASSWORD: ${MYSQL_DATABASE_PASSWORD}
       MYSQL_DATABASE: database
       MYSQL_USER: user
       MYSQL_PASSWORD: password

   web:
     image: ieast/nginx-php-fpm7.2:latest
     ports:
       - 80
     volumes:
       - app:/app
     restart: always
     environment:
       MYSQL_HOST: db:3306
       MYSQL_DATABASE: database
       MYSQL_USER: user
       MYSQL_PASSWORD: password
       REDIS_HOST: redis:6379

   redis:
     image: redis:latest
     ports:
       - 6379
     volumes:
       - data:/data
     restart: always

   lb:
     image: haproxy
     ports:
       - 80:80
       - 443:443
     volumes:
       - haproxy:/usr/local/etc/haproxy
     restart: always

volumes:
    db_data:
    app:
    data:
    haproxy:

